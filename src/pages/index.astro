---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout
  title="Jordan Selig â€” Blog"
  description="Personal blog by Jordan Selig."
>
  <section class="hero">
    <p class="greeting">Hey, I'm</p>
    <h1>Jordan<span class="accent-dot">.</span></h1>
    <p class="tagline">Welcome to my corner of the internet. I write about things I find interesting.</p>
  </section>

  <section class="posts">
    <h2>Recent Posts</h2>
    <ul>
      {posts.map((post) => (
        <li>
          <a href={`${import.meta.env.BASE_URL}blog/${post.id}/`}>
            <div class="card-content">
              <h3>{post.data.title}</h3>
              <p class="description">{post.data.description}</p>
            </div>
            <p class="meta">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "short",
                  day: "numeric",
                })}
              </time>
            </p>
          </a>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>

<style>
  .hero,
  .posts {
    max-width: 48rem;
    margin: 0 auto;
    padding: 2rem;
  }
  .hero {
    padding-top: 5rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--border);
    margin-bottom: 1rem;
  }
  .greeting {
    font-size: 1.125rem;
    color: var(--text-muted);
    margin-bottom: 0.25rem;
    font-weight: 500;
  }
  .hero h1 {
    font-size: 3rem;
    font-weight: 800;
    letter-spacing: -0.03em;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--text) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .accent-dot {
    color: var(--accent);
    -webkit-text-fill-color: var(--accent);
  }
  .tagline {
    color: var(--text-muted);
    font-size: 1.175rem;
    max-width: 36rem;
    line-height: 1.6;
  }
  h2 {
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
    font-weight: 700;
  }
  ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  li a {
    display: block;
    padding: 1.25rem 1.5rem;
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    text-decoration: none;
    color: var(--text);
    transition: border-color 0.2s ease, box-shadow 0.2s ease, transform 0.15s ease;
  }
  li a:hover {
    border-color: var(--accent);
    box-shadow: 0 2px 12px var(--accent-subtle);
    transform: translateY(-1px);
  }
  .card-content {
    margin-bottom: 0.5rem;
  }
  h3 {
    font-size: 1.175rem;
    font-weight: 600;
    margin-bottom: 0.375rem;
  }
  .meta {
    font-size: 0.8rem;
    color: var(--text-muted);
  }
  .description {
    font-size: 0.925rem;
    color: var(--text-muted);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 640px) {
    .hero h1 {
      font-size: 2.25rem;
    }
    .hero {
      padding-top: 3rem;
      padding-bottom: 2rem;
    }
  }
</style>
