---
import BaseLayout from "./BaseLayout.astro";
import Comments from "../components/Comments.astro";
import ShareButtons from "../components/ShareButtons.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, description, pubDate, updatedDate, tags } = post.data;
const shareUrl = new URL(Astro.url.pathname, Astro.site).toString();

// Reading time estimate
const body = post.body ?? "";
const words = body.split(/\s+/).filter(Boolean).length;
const readingTime = Math.max(1, Math.round(words / 225));
---

<BaseLayout title={title} description={description}>
  <!-- JSON-LD Structured Data for blog posts (Article schema) -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Article",
      headline: title,
      description: description,
      datePublished: pubDate.toISOString(),
      ...(updatedDate && { dateModified: updatedDate.toISOString() }),
      author: {
        "@type": "Person",
        name: "Jordan Selig",
      },
      keywords: tags.join(", "),
      url: shareUrl,
    })}
  />
  <article>
    <header class="post-header">
      <div class="post-meta">
        <time datetime={pubDate.toISOString()}>
          {pubDate.toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric" })}
        </time>
        <span class="sep" aria-hidden="true">&middot;</span>
        <span>{readingTime} min read</span>
        {updatedDate && (
          <span class="updated">
            &middot; Updated <time datetime={updatedDate.toISOString()}>
              {updatedDate.toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric" })}
            </time>
          </span>
        )}
      </div>
      <h1>{title}</h1>
      {tags.length > 0 && (
        <div class="tags">
          {tags.map((tag: string) => (
            <a href={`${import.meta.env.BASE_URL}tags/${tag}/`} class="tag">{tag}</a>
          ))}
        </div>
      )}
    </header>

    <div class="prose">
      <slot />
    </div>

    <ShareButtons title={title} url={shareUrl} />
    <Comments />
  </article>
</BaseLayout>

<style>
  article {
    max-width: 48rem;
    margin: 0 auto;
    padding: 2rem;
  }
  .post-header {
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }
  h1 {
    font-size: 2.25rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    margin-bottom: 0.75rem;
    line-height: 1.2;
  }
  .post-meta {
    color: var(--text-muted);
    font-size: 0.85rem;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.375rem;
    flex-wrap: wrap;
  }
  .sep {
    opacity: 0.4;
  }
  .updated {
    font-style: italic;
  }
  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .tag {
    font-size: 0.8rem;
    color: var(--accent);
    text-decoration: none;
    background: var(--accent-subtle);
    padding: 0.2rem 0.6rem;
    border-radius: 9999px;
    font-weight: 500;
    transition: background 0.15s ease;
  }
  .tag:hover {
    background: var(--accent);
    color: #fff;
  }
  .prose {
    line-height: 1.8;
    max-width: 65ch;
  }
  .prose :global(h2) {
    font-size: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
    font-weight: 700;
  }
  .prose :global(h3) {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.5rem;
  }
  .prose :global(p) {
    margin-bottom: 1.25rem;
  }
  .prose :global(pre) {
    padding: 1.25rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }
  .prose :global(code) {
    font-size: 0.875em;
    background: var(--surface);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
  }
  .prose :global(pre code) {
    background: none;
    padding: 0;
  }
  .prose :global(img) {
    max-width: 100%;
    border-radius: 0.5rem;
    margin: 1.5rem 0;
  }
  .prose :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--text-muted);
    font-style: italic;
  }
  .prose :global(ul), .prose :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }
  .prose :global(li) {
    margin-bottom: 0.375rem;
  }
  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2rem 0;
  }
  @media (max-width: 640px) {
    h1 {
      font-size: 1.75rem;
    }
  }
</style>
